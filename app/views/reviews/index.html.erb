<header>
  <h2>Reviews for <%=@company.name%> </h2>
</header>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

<ul>
  <div class="companyReviews" data-id="<%=@company.id%>">
  <% @company.reviews.each do |review| %>
      <p><strong><%= review.user.username %></strong> says:</p>
      <li><strong>salary:</strong><br><%= review.salary %></li></br>
      <li><strong>Women in leadership positions?</strong><br> <%= review.women_exec_roles %></li></br>
      <li><strong>Opportunities for promotion?</strong><br><%= review.promo_opps %></li></br>
      <li><strong>Would you recommend a friend? </strong><br><%= review.recommend %></li></br>
      <li><strong>Overall job satisfaction rating?(1-5) </strong><br><%= review.job_rating %></li></br>
      <li><strong>Date Review Posted </strong><br><%= review.created_at.strftime('%m-%d-%Y')%></li></br>
      <li><strong>Other details (i.e. Maternity leave, remote work, training etc.)</strong></li>
        <%=review.content%></p></br>
      <button class="js-nextReview" data-id="<%=review.id%>"><strong> See Next Review.. </strong></button>
    </div>
  </ul>


  <% if logged_in && review.user_id == current_user.id %>
    <p>
      <%= button_to "Edit Review", edit_company_review_path(@company, review), method: :get %>
      <%= button_to "Delete Review", company_review_path(@company, review), {controller: 'reviews', action: 'destroy', method: :delete, confirm: "Are you sure?"} %>
      <%= button_to "See Company", company_path(@company), :method => :get %>
    </p>
  <% end %>
<% end %>

  <% if logged_in && current_user %>
  <p>
    <br>
    <%= button_to "My Profile", user_path(current_user), method: :get %>
    <%= button_to "Back to Companies", companies_url, method: :get %>
  </p>
  <% end %>
