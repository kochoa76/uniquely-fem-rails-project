<h1>Edit your info: </h1>

<%= form_for @user do |f| %>
    <%= f.label :password, "Password:" %>
    <br>
    <%= f.password_field :password %>
    <br></br>

    <%= f.label :email, "Email:" %>
    <br>
    <%= f.text_field :email %>
    <br></br>

    <%= f.label :admin, "Check box if admin" %>
    <br>
    <%= f.check_box :admin %>
    <br></br>

    <%= f.submit "Update" %>

<% end %>
<br></br>

<%= link_to 'Back to My Profile', @user %>
