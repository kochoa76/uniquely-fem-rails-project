<h2> Company Information </h2>
<div id="showCompanies">
<table class="table2">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <tr>
      <td><strong>Name </strong></td>
      <td><strong>Employees </strong></td>
      <td><strong>City (hq) </strong></td>
      <td><strong>State </strong></td>
      <td><strong>Description</strong></td>
      <td><strong> Avg Rating </strong></td>
      <td><strong> # of Reviews </strong></td>
    </tr>

    <tr>
      <td><%= @company.name %></td>
      <td><%= @company.size %></td>
      <td><%= @company.city %></td>
      <td><%= @company.state %></td>
      <td><%= @company.description %></td>
      <% if @company.reviews.exists? %>
      <td><%= @company.reviews.avg_rated.job_rating %></td>
      <% else %>
      <td> No Reviews Yet </td>
      <% end %>
      <td><%= @company.reviews.count %></td>
    </tr>
  </tbody>
</table>
<div class="sortedReviews">
</div> 
<br></br>
<% if @company.reviews.exists? %>
<%= button_to "See #{@company.name} reviews", company_reviews_path(@company), :method=> :get, class: "buttonTo" %>
<%= button_to "See all Companies", companies_path, method: :get, class: "buttonTo" %>
<%= link_to "See Sorted Reviews", @company,  id: "sortedReviews" %>
<% end %>

<% if current_user.admin && logged_in %>
<%= button_to "Edit Company", edit_company_path(@company), method: :get, class: "buttonTo" %>
<%= button_to "See all Companies", companies_path, method: :get, class: "buttonTo" %>
<% end %>
</div>
