<h2> Company Information </h2>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Name </strong></td>
      <td><strong>Size </strong></td>
      <td><strong>Location </strong></td>
      <td><strong>Number of Employees </strong></td>
    </tr>

    <tr>
      <td><%= @company.name %></td>
      <td><%= @company.size %></td>
    </tr>
  </tbody>
</table>

<% if current_user.admin && logged_in %>
<%= button_to "Edit Company", company_path(@company), method: :get%>
<% end %>
