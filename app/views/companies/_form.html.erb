<% if current_user.admin && logged_in %>
  <%= form_for(@company) do |f| %>
      <p>
        <%= f.label :name, "Company Name:" %>
        <%= f.text_field :name, required: true  %>
        <br></br>
        <%= f.label :size, "Company Size:" %>
        <%= f.number_field :size, required: true  %>
        <br></br>
        <%= f.label :city, "City:" %>
        <%= f.text_field :city, required: true  %>
        <br></br>
        <%= f.label :state, "State" %>
        <%= f.text_field :state, required: true  %>
        <br></br>
        <%= f.submit %></p>
      <% end %>
  <% end %>
